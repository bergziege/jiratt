<UserControl x:Class="Jiratt.UI.Modules.JiraModule.Shell.JiraModuleShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Jiratt.UI.Modules.JiraModule.Shell"
             xmlns:regions="http://prismlibrary.com/"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ItemsControl regions:RegionManager.RegionName="{x:Static local:JiraShellRegionNames.TopStatusBar}"/>
        <ContentControl regions:RegionManager.RegionName="{x:Static local:JiraShellRegionNames.SearchRegion}" Grid.Row="1" />
        <ContentControl regions:RegionManager.RegionName="{x:Static local:JiraShellRegionNames.TrackingRegion}" Grid.Row="2" />
    </Grid>
</UserControl>